                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Hello World message",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "message": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}