        }
      },
      "todoListId": {
        "name": "todoListId",
        "in": "path",
        "required": true,
        "description": "Unique identifier of the todo list",
        "schema": {
          "type": "string"
        }
      },
      "todoId": {
        "name": "todoId",
        "in": "path",
        "required": true,
        "description": "Unique identifier of the todo",
        "schema": {
          "type": "string"
        }
      },
      "includeTodos": {
        "name": "includeTodos",
        "in": "query",
        "required": false,
        "description": "Include todos in the response",
        "schema": {
          "type": "boolean"
        }
      },
      "deleteNestedTodos": {
        "name": "deleteNestedTodos",
        "in": "query",
        "required": false,
        "description": "Delete nested todos",
