{
    "swagger": "2.0",
    "info": {
        "title": "Todo API",
        "description": "Simple Todo API for CRUD operations",
        "version": "1.0.0"
    },
    "host": "localhost:3000",
    "basePath": "/api",
    "schemes": [
        "http"
    ],
    "paths": {
        "/": {
            "get": {
                "summary": "Simple Hello World",
